{
    "manifest_version": 2,
    "name": "Qmate Spotlight",
    "version": "1.0.5",
    "background": {
        "scripts": [
            "/scripts/background/main.js"
        ]
    },
    "content_scripts": [
        {
            "js": [
                "/scripts/content/detectUI5.js"
            ],
            "matches": [
                "<all_urls>",
                "http://*/*",
                "https://*/*"
            ]
        }
    ],
    "content_security_policy": "default-src 'self'; style-src 'unsafe-inline';",
    "description": "With the Qmate Spotlight, you can easily debug and generate qmate selectors and try actions out.",
    "devtools_page": "/html/devtools/index.html",
    "icons": {
        "128": "/images/icon-128.png",
        "16": "/images/icon-16.png"
    },
    "page_action": {
        "default_icon": {
            "19": "/images/icon-19.png",
            "38": "/images/icon-38.png"
        },
        "default_popup": "/html/popup/index.html"
    },
    "permissions": [
        "contextMenus",
        "<all_urls>",
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "web_accessible_resources": [
        "/scripts/injected/*.js",
        "/scripts/injected/**/*.js",
        "/vendor/ToolsAPI.js"
    ]
}
